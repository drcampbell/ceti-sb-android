<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="@color/PressedButtonColor" />
            <gradient android:angle="-90"
                      android:startColor="@color/PressedButtonColor"
                      android:endColor="@color/PressedButtonColor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="@color/DefButtonColor" />
            <solid android:color="@color/DefButtonColor"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="@color/DefButtonColor" />
            <gradient android:angle="-90"
                      android:startColor="@color/DefButtonColor"
                      android:endColor="@color/DefButtonColor" />
        </shape>
    </item>
</selector>