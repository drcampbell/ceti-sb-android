<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="@color/PosPressedButtonColor" />
            <gradient android:angle="-90"
                      android:startColor="@color/PosPressedButtonColor"
                      android:endColor="@color/PosPressedButtonColor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="@color/PosButtonColor" />
            <solid android:color="@color/PosButtonColor"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                    android:color="@color/PosButtonColor" />
            <gradient android:angle="-90"
                      android:startColor="@color/PosButtonColor"
                      android:endColor="@color/PosButtonColor" />
        </shape>
    </item>
</selector>