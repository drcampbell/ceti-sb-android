<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             tools:context="com.ceti_sb.android.EventSearchFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/textViewEventSearch"
            android:text="Search By Event"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/editTextEventSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="eg. Jefferson, Central, etc"

            android:layout_marginTop="10dp"
            />

        <Button android:id="@+id/search_events_button" style="?android:textAppearanceMedium"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10dp" android:text="@string/title_activity_search"
                android:textStyle="bold"
                android:background="@color/SearchButtonColor"/>
</LinearLayout>
</FrameLayout>
