<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".account.ProfileEditFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TV_Style_Title"
                android:text="Public Profile"
                android:id="@+id/title"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    style="@style/TV_Style_Title_Left"
                    android:text="Name:"
                    android:id="@+id/tv_name_t"/>

                <TextView
                    style="@style/TV_Style_Content"
                    android:text=""
                    android:id="@+id/tv_name" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    style="@style/TV_Style_Title_Left"
                    android:text="School:"
                    android:id="@+id/tv_school_t"/>

                <TextView
                    style="@style/TV_Style_Content"
                    android:text=""
                    android:id="@+id/tv_location"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    style="@style/TV_Style_Title_Left"
                    android:text="Grades:"
                    android:id="@+id/tv_grades_t"/>

                <EditText
                    style="@style/ET_Style"
                    android:text=""
                    android:id="@+id/et_grades"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    style="@style/TV_Style_Title_Left"
                    android:text="Bio:"
                    android:id="@+id/tv_bio_t"/>

                <EditText
                    style="@style/ET_Style"
                    android:text=""
                    android:id="@+id/et_bio"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    style="@style/TV_Style_Title_Left"
                    android:text="Business:"
                    android:id="@+id/tv_business_t"/>

                <EditText
                    style="@style/ET_Style"
                    android:text=""
                    android:id="@+id/et_business"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    style="@style/TV_Style_Title_Left"
                    android:text="Job Title:"
                    android:id="@+id/tv_job_t"/>

                <EditText
                    style="@style/ET_Style"
                    android:text=""
                    android:id="@+id/et_job"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LL_Divider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_profile_buttons"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:baselineAligned="false">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    style="@style/Button"
                    android:text="Save Profile"
                    android:id="@+id/save_profile_button"
                    android:onClick="onClick"
                    android:layout_weight="1"/>
                <Button
                    style="@style/Button"
                    android:text="Find My School"
                    android:id="@+id/find_school_button"
                    android:onClick="onClick"
                    android:layout_weight="1"/>
                <!--android:onClick="onClick"-->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
