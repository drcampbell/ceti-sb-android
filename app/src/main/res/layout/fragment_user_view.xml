<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ceti_sb.android.UserViewFragment">
    <LinearLayout
        android:id="@+id/layout_fragment_user"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_name"
            android:text="Name "
            style="@style/TV_Style_Title"/>
        <LinearLayout
            style="@style/LL_Divider"/>
        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/user_tab">
        </FrameLayout>
        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_tab_content">
        </FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:baselineAligned="false">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                style="@style/Button"
                android:text="Contact User"
                android:id="@+id/contact_user_button"
                android:onClick="onClick"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:text="Event Feed"
            android:id="@+id/textView3"/>

        <LinearLayout
            style="@style/LL_Divider"/>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>
