<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.school_business.android.school_business.UserViewFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_fragment_user"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_name"
            android:text="Name "
            style="@style/TV_Style_Title"/>

        <LinearLayout
            android:id="@+id/layout_user_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/LL_Horizontal">
                <TextView
                    android:id="@+id/tv_school_t"
                    android:text="School: "
                    style="@style/TV_Style_Title_Left"/>
                <TextView
                    android:id="@+id/tv_location"
                    style="@style/TV_Style_Content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LL_Horizontal">
                <TextView
                    android:id="@+id/tv_grades_t"
                    android:text="Grades: "
                    style="@style/TV_Style_Title_Left"/>
                <TextView
                    android:id="@+id/tv_grades"
                    style="@style/TV_Style_Content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_user_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/LL_Horizontal">
                <TextView
                    android:id="@+id/tv_job_t"
                    android:text="Job Title: "
                    style="@style/TV_Style_Title_Left"/>
                <TextView
                    android:id="@+id/tv_job"
                    style="@style/TV_Style_Content"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LL_Horizontal">
                <TextView
                    android:id="@+id/tv_business_t"
                    android:text="Business: "
                    style="@style/TV_Style_Title_Left"/>
                <TextView
                    android:id="@+id/tv_business"
                    style="@style/TV_Style_Content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal">
            <TextView
                android:id="@+id/tv_role_t"
                android:text="Role: "
                style="@style/TV_Style_Title_Left"/>
            <TextView
                android:id="@+id/tv_role"
                style="@style/TV_Style_Content"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal">
            <TextView
                android:id="@+id/tv_bio_t"
                android:text="Biography: "
                style="@style/TV_Style_Title_Left"/>
            <TextView
                android:id="@+id/tv_bio"
                style="@style/TV_Style_Content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:baselineAligned="false">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                style="@style/Button"
                android:text="Contact User"
                android:id="@+id/contact_user_button"
                android:onClick="onClick"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</FrameLayout>
